* {
    background-color: #F0F2F5;
    font-family: &quot;Microsoft YaHei&quot;, SimHei, sans-serif;
    font-size: 14px;
    color: #333333;
}

/* ============ 顶部标题 ============ */
QLabel#titleLabel {
    font-size: 18px;
    font-weight: bold;
    color: #1F2329;
    padding: 8px 0;
    background: transparent;
}

/* ============ 登录卡片 ============ */
QFrame#loginFrame {
    background-color: #FFFFFF;
    border-radius: 8px;
    border: 1px solid #E5E6EB;
}

/* 登录页标签 */
QFrame#loginFrame QLabel {
    color: #4E5969;
    background: transparent;
}

/* ============ 所有输入框【统一样式，确保显示】 ============ */
QLineEdit {
    height: 34px;
    padding: 0 10px;
    border-radius: 6px;
    border: 1px solid #E5E6EB;
    background-color: #FFFFFF;
    color: #333333;
}
QLineEdit:focus {
    border-color: #409EFF;
    outline: none;
}

/* ============ 按钮样式【区分主次，无异常】 ============ */
/* 通用按钮：登录/发送 */
QPushButton {
    height: 34px;
    padding: 0 20px;
    border-radius: 6px;
    background-color: #409EFF;
    color: #FFFFFF;
    border: none;
}
QPushButton:hover {background-color: #66B1FF;}
QPushButton:pressed {background-color: #337ECC;}

/* 退出按钮（右上角警示色） */
QPushButton#logoutButton {
    background-color: #F56C6C;
}
QPushButton#logoutButton:hover {background-color: #F78989;}

/* ============ 聊天核心区域 ============ */
/* 左侧聊天框 */
QTextEdit#roomTextEdit {
    border: 1px solid #E5E6EB;
    border-radius: 6px;
    padding: 8px;
    background-color: #FFFFFF;
    color: #333333;
}

/* 右侧成员列表 */
QListWidget#userListWidget {
    border: 1px solid #E5E6EB;
    border-radius: 6px;
    background-color: #FFFFFF;
    max-width: 140px;
}
QListWidget::item {
    height: 30px;
    padding-left: 8px;
    background: transparent;
}
QListWidget::item:selected {
    background-color: #ECF5FF;
    color: #409EFF;
}

/* 底部输入框 */
QLineEdit#sayLineEdit {
    background-color: #FFFFFF;
}

/* ============ 滚动条美化【轻量不冲突】 ============ */
QScrollBar:vertical {width:7px; background:transparent;}
QScrollBar::handle:vertical {background:#DCDFE6; border-radius:3px;}
QScrollBar::handle:vertical:hover {background:#C0C4CC;}
QScrollBar::add-line,QScrollBar::sub-line {height:0;}
